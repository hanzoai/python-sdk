      "git_search", "batch_search", "vector", "node", "vector_search", "vector_index", "find_files"
    ],
    "process": [
      "process", "run_background", "processes", "pkill", "logs"
    ],
    "packages": [
      "uvx", "uvx_background", "npx", "npx_background"
    ],
    "database": [
      "sql_query", "sql_search", "sql_stats",
      "graph_add", "graph_remove", "graph_query", "graph_search", "graph_stats"
    ],
    "mcp": [
      "mcp", "mcp_add", "mcp_remove", "mcp_stats"
    ],
    "memory": [
      "memory", "recall_memories", "create_memories", "update_memories", "delete_memories",
      "manage_memories", "recall_facts", "store_facts", "summarize_to_memory", "manage_knowledge_bases"
    ],
    "editor": [
      "neovim_edit", "neovim_command", "neovim_session"
    ],
    "llm": [
      "llm", "consensus", "llm_manage"
    ],
    "productivity": [
      "todo", "jupyter", "batch", "content_replace", "lsp", "open"
    ]
  },

  "presets": {
    "_comment": "Predefined tool configurations",
    "minimal": {
      "_enable_categories": ["essential"],
      "_disable_all_others": true
    },
    "standard": {
      "_enable_categories": ["essential", "search", "process", "productivity"],
      "_disable_tools": []
    },
    "full": {
      "_enable_all": true
    },
    "development": {
      "_enable_categories": ["essential", "agent", "search", "process", "packages", "productivity", "memory", "editor"],
      "_enable_tools": ["lsp"]
    },
    "ai_research": {
      "_enable_categories": ["essential", "agent", "search", "productivity", "memory", "llm"],
      "_enable_tools": ["vector_search", "vector_index"]
    }
  }
}
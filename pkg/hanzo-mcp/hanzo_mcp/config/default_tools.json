      "run_command", "run", "bash", "shell", "zsh", "stats", "tool_list", "tool_enable", "tool_disable"
    ],
    "agent": [
      "agent", "dispatch_agent", "network", "swarm", "claude", "claude_cli", "cc", 
      "codex", "codex_cli", "gemini", "gemini_cli", "grok", "grok_cli",
      "aider", "cline", "openhands", "oh", "hanzo_dev", "think", "critic"
    ],
    "search": [
